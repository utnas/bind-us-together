<!doctype html>
<html>
<head>
    <title>Ubik-in</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="/app/views/styles/style.css">
</head>
<body>
<div class="container">
    <div class="col-sm-5 col-sm-offset-3">
        <img src="" class="img-responsive" alt="Ubik-in">

        <% if (message.length > 0) { %>
        <div class="alert alert-danger btn-block"><%= message %></div>
        <% } %>
        <form action="/login" method="post">
            <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control" name="email">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" name="password">
            </div>
            <input type="checkbox" name="keepLogged"><label class="h-spacer">Keep me logged in</label>
            <button type="submit" class="btn btn-warning btn-lg btn-block v-spacer">Login</button>
        </form>
        <hr>

        <h1>
            <div class="wrapper">
                <a href="/auth/facebook" class="btn btn-default btn-lg left-align"><span
                            class="fa fa-facebook"></span> Facebook</a>

                <a href="/auth/twitter" class="btn btn-default btn-lg"><span
                            class="fa fa-twitter"></span> Twitter</a>

                <a href="/auth/google" class="btn btn-default btn-lg right-align"><span
                            class="fa fa-google-plus"></span> Google+</a>
            </div>
        </h1>

        <div class="v-spacer">
            <a href="/signup" class="btn btn-default btn-lg btn-block"><span class="fa fa-user"></span> Need an
                account ?</a>
        </div>
    </div>
</div>
</body>
</html>