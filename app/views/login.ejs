<!doctype html>
<html>
<head>
    <title>Ubikin - Link Us Together</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="/app/views/styles/style.css">
</head>
<body>
<div class="container">
    <div class="col-sm-4 col-sm-offset-4">
        <img src="" class="img-responsive" alt="Ubikin">

        <% if (message.length > 0) { %>
        <div class="alert alert-danger btn-block"><%= message %></div>
        <% } %>
        <form action="/login" method="post">
            <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control" name="email">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" name="password">
            </div>
            <input type="checkbox" name="keepLogged"><label class="h-spacer">Keep me logged in</label>
            <button type="submit" class="btn btn-warning btn-lg btn-block v-spacer">Login</button>
        </form>

        <p class="v-spacer">Or login with:</p>

        <h1>
            <div class="wrapper">
                <a href="/auth/facebook" class="btn btn-default left-align">
                    <span class="fa fa-facebook"></span> Facebook
                </a>
                <a href="/auth/twitter" class="btn btn-default center-align">
                    <span class="fa fa-twitter"></span> Twitter
                </a>
                <a href="/auth/google" class="btn btn-default right-align">
                    <span class="fa fa-google-plus"></span> Google+
                </a>
            </div>
        </h1>

        <div class="v-spacer">
            <a href="/signup" class="btn btn-default btn-lg btn-block"> Forgot you password ?</a>
        </div>

        <div class="v-spacer">
            <a href="/signup" class="btn btn-default btn-lg btn-block">
                <span class="fa fa-user"></span> Need an account ?
            </a>
        </div>
    </div>
</div>
</body>
</html>